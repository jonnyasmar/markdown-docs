{
  "name": "markdown-docs",
  "displayName": "Markdown Docs & Comments",
  "description": "WYSIWYG Markdown Editor with Inline Commenting (great for working with AI!)",
  "version": "1.1.7",
  "icon": "media/icon.png",
  "publisher": "jonnyasmar",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonnyasmar/markdown-docs"
  },
  "sponsor": {
    "url": "https://buymeacoffee.com/jonnygravity"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:markdown-docs.openEditor",
    "onCommand:markdown-docs.openStandalone",
    "onWebviewPanel:markdown-docs",
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-docs.openEditor",
        "title": "Open with Markdown Docs",
        "category": "Markdown Docs"
      },
      {
        "command": "markdown-docs.openStandalone",
        "title": "New Markdown Docs File",
        "category": "Markdown Docs"
      },
      {
        "command": "markdown-docs.openWithTextEditor",
        "title": "Open with Text Editor",
        "category": "Markdown Docs"
      }
    ],
    "customEditors": [
      {
        "viewType": "markdown-docs.editor",
        "displayName": "Markdown Docs",
        "selector": [
          {
            "filenamePattern": "*.md"
          },
          {
            "scheme": "untitled",
            "pattern": "**/*.md"
          }
        ],
        "priority": "default"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceLangId == markdown",
          "command": "markdown-docs.openEditor",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == markdown",
          "command": "markdown-docs.openWithTextEditor",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "when": "resourceLangId == markdown",
          "command": "markdown-docs.openEditor",
          "group": "1_open"
        },
        {
          "when": "resourceLangId == markdown",
          "command": "markdown-docs.openWithTextEditor",
          "group": "1_open"
        }
      ]
    },
    "keybindings": [
      {
        "key": "ctrl+shift+alt+m",
        "command": "markdown-docs.openEditor",
        "mac": "cmd+shift+alt+m",
        "when": "editorTextFocus && editorLangId == markdown"
      }
    ],
    "configuration": {
      "title": "Markdown Docs",
      "properties": {
        "markdown-docs.defaultFont": {
          "type": "string",
          "default": "Default",
          "description": "Default font family for the markdown editor",
          "enum": [
            "Default",
            "Arial",
            "Times New Roman",
            "Roboto",
            "Georgia",
            "Calibri",
            "Garamond",
            "Book Antiqua",
            "Courier New",
            "Open Sans",
            "Lato",
            "Montserrat",
            "Source Sans Pro"
          ]
        },
        "markdown-docs.fontSize": {
          "type": "number",
          "default": 14,
          "minimum": 8,
          "maximum": 48,
          "description": "Default font size for the markdown editor (in pixels)"
        },
        "markdown-docs.textAlign": {
          "type": "string",
          "default": "left",
          "description": "Default text alignment for the markdown editor",
          "enum": [
            "left",
            "center",
            "right",
            "justify"
          ]
        },
        "markdown-docs.bookView": {
          "type": "boolean",
          "default": false,
          "description": "Enable book view mode with centered layout and padding"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "clean": "rm -rf dist",
    "compile": "npm run clean && npm run compile:webview && rspack build -c rspack.config.js",
    "compile:webview": "cd webview-ui && npm run build",
    "watch": "rspack build -c rspack.config.js --watch",
    "package": "npm run clean && npm run compile:webview && rspack build -c rspack.config.js --mode production --devtool hidden-source-map",
    "build:webpack": "npm run clean && npm run compile:webview && webpack --config webpack.config.js",
    "build:rspack": "npm run clean && npm run compile:webview && rspack build -c rspack.config.js",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts && cd webview-ui && eslint src --ext ts,tsx && cd .. && npm run prettier:check",
    "lint:fix": "tsc --noEmit --skipLibCheck && eslint src --ext ts --fix && cd webview-ui && tsc --noEmit --skipLibCheck && eslint src --ext ts,tsx --fix && npm run prettier:write",
    "lint:fix:quiet": "tsc --noEmit --skipLibCheck && eslint src --ext ts --fix --quiet && cd webview-ui && tsc --noEmit --skipLibCheck && eslint src --ext ts,tsx --fix --quiet && npm run prettier:write",
    "prettier:check": "prettier --check 'src/**/*.{ts,tsx,js,jsx,json,md}' 'webview-ui/src/**/*.{ts,tsx,js,jsx,json,md}'",
    "prettier:write": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,md}' 'webview-ui/src/**/*.{ts,tsx,js,jsx,json,md}'",
    "format": "npm run prettier:write",
    "typecheck": "tsc --noEmit --skipLibCheck && cd webview-ui && tsc --noEmit --skipLibCheck",
    "typecheck:main": "tsc --noEmit",
    "typecheck:webview": "cd webview-ui && tsc --noEmit",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@rspack/cli": "^1.5.1",
    "@rspack/core": "^1.5.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.74.0",
    "@types/yaml": "^1.9.6",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-cli": "^0.0.1",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "uuid": "^11.1.0",
    "yaml": "^2.8.1"
  }
}
